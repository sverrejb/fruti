{
  "manifest_version": 3,
  "name": "Recently Used Tabs Indicator",
  "version": "1.1",
  "author": "Sverre Johann Bj√∏rke",
  "homepage_url": "https://github.com/sverrejb/fruti",
  "description": "Tracks the 5 most recently used tabs and adds visual indicators to their titles. Requires access to all websites to modify tab titles (does not read page content).",
  "browser_specific_settings": {
    "gecko": {
      "id": "fruti@sverre.me",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
